@model FSMS_asp.net.Models.Login.LoginModel

@{
    ViewData["Title"] = "FSMS Login";
    Layout = null;
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap 5.1 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <!-- Google Font Slabo 13px -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Slabo+13px">

    <!-- Google Font Open Sans -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans">

    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <title>FSMS Login</title>

    <style>
        .title {
            font-family: 'Open Sans', serif;
        }

        body {
            font-family: 'Open Sans', serif;
            background-image: url('images/login background.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
        }

        .checkbox {
            position: relative;
            top: 7px;
        }

        .forgotPassword {
            position: relative;
            left: 17px;
        }

    </style>

</head>

<body>

    <!-- Content -->
    <div class="container d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="row justify-content-center">
            <div class="col-12">
                <!-- FSMS Text -->
                <h1 style="font-weight: bold" class="title text-center">FSMS</h1>
                <div class="card">

                    <!-- Card Header -->
                    <div class="card-header text-center">
                        <strong>Login</strong>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body">
                        <form asp-action="Login">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            
                            

                            <!-- Username -->
                            <div class="row mb-3 mt-2">
                                <label asp-for="UserName" class="control-label"></label>
                                <div class="col">
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>

                                </div>
                            </div>

                            <!-- Password -->
                            <div class="row mb-1">
                                <label asp-for="Password" class="control-label"></label>
                                <div class="col">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row d-flex justify-content-between mb-1">

                                <!-- Remember Me -->
                                <div class="col-6">
                                    <div class="form-check checkbox">
                                        <label asp-for="RememberMe" class="form-check-label"></label>
                                        <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                                        <span asp-validation-for="RememberMe" class="text-danger"></span>
                                    </div>

                                </div>

                                <!-- Forget Password -->
                                <div class="col-6 pull-right forgotPassword">
                                    <a class="btn btn-link" href="/forgotPassword">
                                        <small>Forgot Password?</small>
                                    </a>
                                </div>

                            </div>

                            <div class="mb-0">
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">
                                        Login
                                    </button>

                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
    </script>

</body>

</html>
